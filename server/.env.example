# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/aihash

# Security
JWT_SECRET=your_jwt_secret_here

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_TIMEOUT=5000

# Mining Configuration
DEFAULT_POWER_LIMIT=80
DEFAULT_TARGET_TEMP=70
MIN_HASHRATE_THRESHOLD=50000000

# Optimization Settings
AUTO_OPTIMIZE_INTERVAL=300000
EFFICIENCY_THRESHOLD=0.5

# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Monitoring
ALERT_TEMPERATURE_THRESHOLD=80
ALERT_HASHRATE_DROP_PERCENT=20
ALERT_POWER_SPIKE_PERCENT=15

# External Services (for future implementation)
COINGECKO_API_KEY=your_coingecko_api_key
WEATHER_API_KEY=your_weather_api_key